{
  "name": "vcastplay-wrapper",
  "version": "2.0.0",
  "description": "Player app for vcastplay system",
  "main": "main.js",
  "build": {
    "appId": "com.vcastplay.player",
    "productName": "VcastplayPlayer",
    "files": [
      "main.js",
      "preload.js",
      "assets/",
      "dist/player/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "build"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "nyxsys-dev",
        "repo": "vcastplay",
        "releaseType": "release"
      }
    ],
    "win": {
      "icon": "assets/favicon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false,
      "installerIcon": "assets/favicon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Vcastplay Player",
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true
    }
  },
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "publish": "electron-builder --publish=always"
  },
  "keywords": [],
  "author": "NYXSYS Philippines Inc",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^36.3.1",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-log": "^5.4.0",
    "electron-updater": "^6.6.2",
    "systeminformation": "^5.27.1"
  }
}
